<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sspu.mapper.CourseCategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.sspu.entity.CourseCategory">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="label" property="label" />
        <result column="parent_id" property="parentId"/>
        <result column="is_show" property="isShow" />
        <result column="orderby" property="orderby"/>
        <result column="is_leaf" property="isLeaf" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, label, parentid, is_show, orderby, is_leaf
    </sql>

    <resultMap id="selectTreeNodesMap" type="com.sspu.dto.CourseCategoryTreeDto">
        <id column="one_id" property="id" />
        <result column="one_name" property="name" />
        <result column="one_label" property="label" />
        <result column="one_orderby" property="orderby"/>
        <result column="one_parentid" property="parentId" />
        <result column="one_is_leaf" property="isLeaf" />

        <!--一对多映射,ofType对应了List中的类型-->
        <collection property="childrenTreeNodes" ofType="com.sspu.dto.CourseCategoryTreeDto">
            <id column="two_id" property="id" />
            <result column="two_name" property="name" />
            <result column="two_label" property="label" />
            <result column="two_orderby" property="orderby"/>
            <result column="two_parentid" property="parentId" />
            <result column="two_is_leaf" property="isLeaf" />
        </collection>
    </resultMap>

    <select id="abc" resultType="com.sspu.entity.CourseCategory">
        select * from course_category where id=1
    </select>

    <select id="selectTreeNodes" resultMap="selectTreeNodesMap">
        SELECT
        one.id AS one_id,
        one.name AS one_name,
        one.label AS one_label,
        one.orderby AS one_orderby,
        one.parent_id AS one_parentid,  <!-- 数据库列名 → 别名 -->
        one.is_leaf AS one_is_leaf,
        two.id AS two_id,
        two.name AS two_name,
        two.label AS two_label,
        two.orderby AS two_orderby,
        two.parent_id AS two_parentid,  <!-- 数据库列名 → 别名 -->
        two.is_leaf AS two_is_leaf
        FROM
            course_category one
        LEFT JOIN course_category two
        ON one.id = two.parent_id  <!-- 连接条件使用数据库列名 -->
        WHERE
            one.is_show = '1'
        AND (two.is_show = '1' OR two.id IS NULL)
        ORDER BY
            one.orderby,
            two.orderby
    </select>

</mapper>
